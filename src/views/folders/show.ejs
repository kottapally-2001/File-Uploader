<%- include('../layouts/main', { title: folder.name }) %>

<h2><%= folder.name %></h2>

<form action="/files/upload" method="POST" enctype="multipart/form-data" class="upload-form">
  <input type="hidden" name="folderId" value="<%= folder.id %>" />
  <input type="file" name="file" required />
  <button type="submit" class="btn">Upload File</button>
</form>

<ul class="list">
  <% folder.files.forEach(f => { %>
    <li><a href="/files/<%= f.id %>"><%= f.name %></a></li>
  <% }) %>
</ul>

<form action="/<%= folder.id %>/share" method="POST" class="share-form">
  <input type="text" name="duration" placeholder="e.g. 2d" />
  <button type="submit" class="btn small">Share Folder</button>
</form>
